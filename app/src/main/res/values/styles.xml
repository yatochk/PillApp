<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScheduleItemText">

    </style>

    <style name="ValuesItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/second_text_color</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MedicationCard">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="AddMedicationName">
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="EditMedicationValue">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/medication_value_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="EditMedicationText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
